@model IEnumerable<MyCodeManager.Models.Snippet>

    @{
    ViewData["Title"] = "Dashboard";
    }

    <style>
        /* تصميم البطاقات الزجاجية */
        .snippet-card {
            background: rgba(40, 44, 52, 0.6); /* لون شفاف */
            backdrop-filter: blur(10px); /* تأثير الضباب خلف البطاقة */
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            transition: transform 0.3s, border-color 0.3s;
        }

            .snippet-card:hover {
                transform: translateY(-5px);
                border-color: rgba(52, 152, 219, 0.5); /* لون أزرق عند التحويم */
            }
        /* منطقة الكود المصغر */
        .code-preview {
            font-family: 'Consolas', monospace;
            font-size: 0.8rem;
            background-color: rgba(0,0,0,0.3);
            color: #aab;
            height: 100px;
            overflow: hidden;
            border-radius: 8px;
            padding: 10px;
            white-space: pre-wrap; /* الحفاظ على الأسطر */
        }
    </style>

    <div class="row justify-content-center mb-5">
        <div class="col-md-8">
            <form asp-action="Index" method="get">
                <div class="input-group input-group-lg">
                    <span class="input-group-text bg-dark border-secondary text-muted"><i class="fas fa-search"></i></span>
                    <input type="text" name="searchString" class="form-control bg-dark border-secondary text-white" placeholder="Search snippets...">
                </div>
            </form>
        </div>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
    {
        var badgeColor = "bg-secondary"; var icon = "fa-code";
        if (item.Language == "C#") { badgeColor = "bg-csharp"; icon = "fa-copyright"; }
        else if (item.Language == "JavaScript") { badgeColor = "bg-js"; icon = "fa-brands fa-js"; }
        else if (item.Language == "HTML/CSS") { badgeColor = "bg-html"; icon = "fa-brands fa-html5"; }
        else if (item.Language == "SQL") { badgeColor = "bg-sql"; icon = "fa-database"; }

        <div class="col-md-4">
            <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-white">
                <div class="card snippet-card h-100 p-3">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0 fw-bold text-truncate">
                            @if (item.IsFavorite)
                            {
                            <span class="text-warning me-1" title="Favorite">⭐</span>
                            }
                            @item.Title
                        </h5>
                        <i class="fas fa-expand text-muted small opacity-50"></i>
                    </div>

                    <div class="mb-3">
                        <span class="nav-icon-circle @badgeColor d-inline-flex" style="width: 28px; height: 28px; font-size: 0.8rem;">
                            @if(item.Language == "JavaScript") { <span>JS</span> }
                            else if (item.Language == "HTML/CSS") { <span>H</span> }
                            else if (item.Language == "SQL") { <span>SL</span> }
                            else { <span>C#</span> }
                        </span>
                        <span class="text-muted small ms-2">@item.Language</span>
                    </div>

                    <div class="code-preview">
                        @item.Code
                    </div>
                </div>
            </a>
        </div>
    }
    </div>
